{
  "compilerOptions": {
    "paths": {
      "@domains/*": ["domains/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
    },
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
